model Profile {
  id         Int    @id @default(autoincrement())
  username   String
  email      String
  firstname  String
  lastname   String
  password   String
  category   String

  AdminID    Int?   @unique
  user       Users? @relation(fields: [AdminID], references: [id])
  posts      Posts[]
}