generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  role      Role?
  profile   Profile?
}

model Posts {
  post_ID   Int     @id @default(autoincrement())
  content   String
  profile   Profile? @relation(fields: [profileId], references: [id])
  profileId Int?
}

